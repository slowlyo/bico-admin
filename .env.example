# =============================================================================
# Bico Admin 环境变量配置模板
# 复制此文件为 .env 并根据实际环境修改配置
# =============================================================================

# 数据库配置
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=bico_admin
DB_PASSWORD=secure_password_123
DB_NAME=bico_admin

# MySQL Root 密码
MYSQL_ROOT_PASSWORD=root_password_123

# Redis 配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_123
REDIS_DB=0
REDIS_CACHE_DB=1

# JWT 配置 (生产环境必须更改)
JWT_SECRET=your-very-secure-jwt-secret-key-change-me
JWT_EXPIRE=24h

# 日志配置
LOG_LEVEL=info

# 缓存配置
CACHE_DRIVER=redis

# 上传配置
UPLOAD_MAX_SIZE=50MB
UPLOAD_MAX_FILES=20
UPLOAD_BASE_URL=

# 应用配置
APP_ENVIRONMENT=production
APP_DEBUG=false
